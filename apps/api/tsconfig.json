{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "typeRoots": ["./types", "./node_modules/@types"]   // ðŸ‘ˆ add this
  },
  "include": ["src", "prisma/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
